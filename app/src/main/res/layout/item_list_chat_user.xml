<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="?attr/selectableItemBackground"    android:clickable="true"    android:focusable="true"    android:orientation="horizontal"    android:padding="5dp">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/user_profile"        android:layout_width="50dp"        android:layout_height="50dp"        android:scaleType="centerCrop"        app:civ_border_color="@android:color/holo_blue_dark"        app:civ_border_width="1dp" />    <Space        android:layout_width="10dp"        android:layout_height="0dp" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content">        <TextView            android:id="@+id/user_name"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="User Name"            android:textSize="20sp"            android:textStyle="bold" />        <TextView            android:id="@+id/message_time"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_alignParentEnd="true"            android:text="10:34 AM"            android:textSize="16sp" />        <TextView            android:id="@+id/last_message"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_below="@+id/user_name"            android:maxLines="1"            android:text="Hi tths sfdsjfhsdjkf jsfhjsdfhskjfhkajsf sjfhjfhjsf uiwertuihjsdf"            android:textSize="18sp" />    </RelativeLayout></LinearLayout>